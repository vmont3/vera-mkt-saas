{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "scripts",
    "prisma/**/*.ts",
    "prisma/**/*.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/client/**/*"
  ]
}